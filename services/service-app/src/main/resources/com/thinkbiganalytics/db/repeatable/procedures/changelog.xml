<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="1" author="ru186002" runOnChange="true" dbms="mysql">
    <sqlFile path="mysql/drop-abandon-feed-jobs.sql" relativeToChangelogFile="true"/>
    <sql endDelimiter="\n">${delimiter.start}</sql>
    <createProcedure path="mysql/abandon-feed-jobs.sql" relativeToChangelogFile="true"/>
    <sql endDelimiter="\n">${delimiter.end}</sql>
    <sql endDelimiter="\n">${delimiter.reset}</sql>
  </changeSet>

  <changeSet id="2" author="ru186002" runOnChange="true" dbms="mysql">
    <sqlFile path="mysql/drop-delete-feed-jobs.sql" relativeToChangelogFile="true"/>
    <sql endDelimiter="\n">${delimiter.start}</sql>
    <createProcedure path="mysql/delete-feed-jobs.sql" relativeToChangelogFile="true"/>
    <sql endDelimiter="\n">${delimiter.end}</sql>
    <sql endDelimiter="\n">${delimiter.reset}</sql>
  </changeSet>

  <changeSet id="3" author="ru186002" runOnChange="true" dbms="postgresql">
    <createProcedure path="postgresql/abandon-feed-jobs.sql" relativeToChangelogFile="true"/>
  </changeSet>

  <changeSet id="4"  author="ru186002" runOnChange="true" dbms="postgresql">
    <createProcedure path="postgresql/delete-feed-jobs.sql" relativeToChangelogFile="true"/>
  </changeSet>

  <changeSet id="5" author="ll186048" runOnChange="true" dbms="mssql">
    <createProcedure path="sqlserver/abandon-feed-jobs.sql" relativeToChangelogFile="true"/>
  </changeSet>

  <changeSet id="6"  author="ll186048" runOnChange="true" dbms="mssql">
    <createProcedure path="sqlserver/delete-feed-jobs.sql" relativeToChangelogFile="true"/>
  </changeSet>

</databaseChangeLog>
