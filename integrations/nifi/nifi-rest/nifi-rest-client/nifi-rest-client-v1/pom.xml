<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>kylo-nifi-rest-client</artifactId>
    <groupId>com.thinkbiganalytics.datalake</groupId>
    <version>0.7.2</version>
  </parent>

  <artifactId>kylo-nifi-rest-client-v1</artifactId>

  <properties>
    <nifi.version>1.1.0</nifi.version>
    <plugin.license.parentRelative>../../../../../</plugin.license.parentRelative>
  </properties>

  <dependencies>

    <!-- General dependencies -->
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <optional>true</optional>
    </dependency>

    <!-- Kylo dependencies -->
    <dependency>
      <groupId>com.thinkbiganalytics.datalake</groupId>
      <artifactId>kylo-commons-rest-client</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>com.thinkbiganalytics.datalake</groupId>
      <artifactId>kylo-nifi-rest-client-api</artifactId>
      <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>com.thinkbiganalytics.datalake</groupId>
      <artifactId>kylo-nifi-rest-model</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/descriptor.xml</descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
